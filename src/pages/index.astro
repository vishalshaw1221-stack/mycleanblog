---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import BlogCard from "../components/BlogCard.astro";

const posts = await getCollection("blog");

// Smart icon generator based on content
function getPostIcon(title, description) {
  const text = (title + " " + (description || "")).toLowerCase();

  if (text.includes("termux") || text.includes("android") || text.includes("mobile")) return "üì±";
  if (text.includes("test") || text.includes("check") || text.includes("experiment")) return "üß™";
  if (text.includes("tutorial") || text.includes("guide") || text.includes("learn")) return "üìö";
  if (text.includes("code") || text.includes("programming") || text.includes("developer")) return "üíª";
  if (text.includes("web") || text.includes("site") || text.includes("design")) return "üåê";
  if (text.includes("update") || text.includes("news") || text.includes("latest")) return "üÜï";
  if (text.includes("thought") || text.includes("idea") || text.includes("philosophy")) return "üí≠";
  if (text.includes("project") || text.includes("build") || text.includes("create")) return "üõ†Ô∏è";
  if (text.includes("bug") || text.includes("fix") || text.includes("error")) return "üêõ";
  if (text.includes("future") || text.includes("plan") || text.includes("roadmap")) return "üîÆ";

  return "üìÑ"; // default
}

const sortedPosts = posts.sort(
  (a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);
---

<Layout
  title="Physics Blog ‚Äî My Digital Notebook"
  description="Welcome to my digital notebook. I write about physics, maths, and ideas in physics ‚Äî deep thoughts, explained as clearly as possible."
  image="/images/blog-home.png"
>

  <section class="blogs-section">
    <!-- Header Section -->
    <header class="blog-header">
      <div class="header-content">
        <div class="logo-section">
          <div class="logo">üìù</div>
          <div class="blog-info">
            <h1 class="blog-title">Physics Blog</h1>
            <p class="blog-description">
              Welcome to my digital notebook. I write about physics, maths, ideas in physics and everything in between ‚Äî deep thoughts, explained as clearly as possible.
            </p>
          </div>
        </div>
      </div>

      <div class="header-stats">
        <div class="stat">
          <span class="stat-number">{posts.length}</span>
          <span class="stat-label">Articles</span>
        </div>
        <div class="stat">
          <span class="stat-number">{new Date().getFullYear()}</span>
          <span class="stat-label">Established</span>
        </div>
      </div>
    </header>

    <!-- Blog Posts Grid -->
    <div class="blog-grid">
      {sortedPosts.map((post) => (
        <a href={`/blog/${post.slug}`} class="blog-card">
          <div class="card-header">
            <div class="post-icon">
              {post.data.icon || getPostIcon(post.data.title, post.data.description)}
            </div>
            <div class="card-badge">
              {new Date(post.data.pubDate) > new Date(Date.now() - 7 * 24 * 60 * 60 * 1000)
                ? "New"
                : "Popular"}
            </div>
          </div>

          <h3>{post.data.title}</h3>
          <p>{post.data.description || "Click to read this fascinating article..."}</p>

          <div class="blog-meta">
            <span class="read-time">‚è±Ô∏è {post.data.readTime || "5 min read"}</span>
            <span class="blog-date">
              üìÖ{" "}
              {post.data.pubDate
                ? new Date(post.data.pubDate).toLocaleDateString("en-US", {
                    year: "numeric",
                    month: "short",
                    day: "numeric",
                  })
                : ""}
            </span>
          </div>

          <div class="read-more">Read Article ‚Üí</div>
        </a>
      ))}
    </div>

    <!-- Empty State -->
    {posts.length === 0 && (
      <div class="empty-state">
        <div class="empty-icon">üìù</div>
        <h3>No Articles Yet</h3>
        <p>Blog posts will appear here once they're published. Check back soon!</p>
      </div>
    )}
  </section>
</Layout>

<style>
  .blogs-section {
    padding: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    min-height: 100vh;
  }

  /* Header Styles */
  .blog-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 20px;
    padding: 3rem 2.5rem;
    margin-bottom: 4rem;
    color: white;
    box-shadow: 0 20px 40px rgba(102, 126, 234, 0.3);
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .logo-section {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    flex: 1;
  }

  .logo {
    font-size: 4rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 1rem;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .blog-info {
    flex: 1;
  }

  .blog-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #fff, #e0e7ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .blog-description {
    font-size: 1.2rem;
    line-height: 1.6;
    opacity: 0.9;
    max-width: 600px;
    margin: 0;
  }

  .header-stats {
    display: flex;
    gap: 2rem;
    text-align: center;
    margin-top: 2rem;
  }

  .stat {
    display: flex;
    flex-direction: column;
  }

  .stat-number {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.9rem;
    opacity: 0.8;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  /* Blog Grid Styles */
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2.5rem;
  }

  .blog-card {
    border-radius: 20px;
    padding: 2.5rem 2rem;
    text-decoration: none;
    transition: all 0.35s ease;
    position: relative;
    overflow: hidden;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    border: 1px solid rgba(200, 180, 255, 0.35);
  }

  .blog-card:nth-child(odd) {
    background: linear-gradient(160deg, rgba(15, 23, 42, 0.85) 0%, rgba(76, 29, 149, 0.75) 100%);
  }

  .blog-card:nth-child(even) {
    background: linear-gradient(140deg, rgba(76, 29, 149, 0.75) 0%, rgba(30, 41, 59, 0.85) 100%);
  }

  .blog-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 0 35px rgba(99, 102, 241, 0.4);
    border-color: rgba(147, 197, 253, 0.6);
  }

  .blog-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .blog-card:hover::before {
    transform: scaleX(1);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1.5rem;
  }

  .post-icon {
    font-size: 3rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .card-badge {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 0.4rem 1rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .blog-card h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #ffffff;
    line-height: 1.4;
    font-weight: 700;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .blog-card p {
    color: #f8f4ff;
    line-height: 1.6;
    margin-bottom: 2rem;
    font-size: 1rem;
    font-weight: 500;
  }

  .blog-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #ede7ff;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
  }

  .read-more {
    color: #ffffff;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.2);
    padding: 0.5rem 1rem;
    border-radius: 12px;
    backdrop-filter: blur(4px);
  }

  .blog-card:hover .read-more {
    transform: translateX(5px);
    background: rgba(255, 255, 255, 0.3);
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: #6c757d;
  }

  .empty-icon {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    opacity: 0.5;
  }

  /* üî• MOBILE RESPONSIVE */
  @media (max-width: 768px) {
    .blogs-section {
      padding: 1rem 0.5rem;
    }

    .blog-header {
      padding: 1.5rem 1rem;
      margin-bottom: 2rem;
      border-radius: 15px;
    }

    .header-content {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }

    .logo-section {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }

    .logo {
      font-size: 2.5rem;
      padding: 0.8rem;
    }

    .blog-title {
      font-size: 1.8rem;
    }

    .blog-description {
      font-size: 1rem;
    }

    .blog-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .blog-card {
      padding: 1.5rem 1rem;
      border-radius: 15px;
    }
  }

  @media (max-width: 480px) {
    .blog-title {
      font-size: 1.5rem;
    }
    .blog-card h3 {
      font-size: 1.1rem;
    }
  }
</style>