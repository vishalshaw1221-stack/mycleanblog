---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");

// Smart icon generator based on content
function getPostIcon(title, description) {
  const text = (title + ' ' + (description || '')).toLowerCase();
  
  if (text.includes('termux') || text.includes('android') || text.includes('mobile')) return 'üì±';
  if (text.includes('test') || text.includes('check') || text.includes('experiment')) return 'üß™';
  if (text.includes('tutorial') || text.includes('guide') || text.includes('learn')) return 'üìö';
  if (text.includes('code') || text.includes('programming') || text.includes('developer')) return 'üíª';
  if (text.includes('web') || text.includes('site') || text.includes('design')) return 'üåê';
  if (text.includes('update') || text.includes('news') || text.includes('latest')) return 'üÜï';
  if (text.includes('thought') || text.includes('idea') || text.includes('philosophy')) return 'üí≠';
  if (text.includes('project') || text.includes('build') || text.includes('create')) return 'üõ†Ô∏è';
  if (text.includes('bug') || text.includes('fix') || text.includes('error')) return 'üêõ';
  if (text.includes('future') || text.includes('plan') || text.includes('roadmap')) return 'üîÆ';
  
  return 'üìÑ'; // default
}

const sortedPosts = posts.sort((a, b) => 
  new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);
---

<Layout title="Home">
  <div class="blogs-section">
    <!-- Header Section -->
    <header class="blog-header">
      <div class="header-content">
        <div class="logo-section">
          <div class="logo">üìù</div>
          <div class="blog-info">
            <h1 class="blog-title">Modern Blog</h1>
            <p class="blog-description">
              Welcome to my digital notebook. I write about technology, development, 
              and everything in between. Simple thoughts, clear explanations.
            </p>
          </div>
        </div>
        <div class="header-stats">
          <div class="stat">
            <span class="stat-number">{posts.length}</span>
            <span class="stat-label">Articles</span>
          </div>
          <div class="stat">
            <span class="stat-number">
              {new Date().getFullYear()}
            </span>
            <span class="stat-label">Established</span>
          </div>
        </div>
      </div>
    </header>

    <!-- Blog Posts Grid -->
    <div class="blog-grid">
      {sortedPosts.map((post) => (
        <a href={`/blog/${post.slug}`} class="blog-card">
          <div class="card-header">
            <div class="post-icon">
              {post.data.icon || getPostIcon(post.data.title, post.data.description)}
            </div>
            <div class="card-badge">
              {new Date(post.data.pubDate) > new Date(Date.now() - 7 * 24 * 60 * 60 * 1000) ? 'New' : 'Popular'}
            </div>
          </div>
          <h3>{post.data.title}</h3>
          <p>{post.data.description || 'Click to read this fascinating article...'}</p>
          <div class="blog-meta">
            <span class="read-time">
              ‚è±Ô∏è {post.data.readTime || '5 min read'}
            </span>
            <span class="blog-date">
              üìÖ {post.data.pubDate ? new Date(post.data.pubDate).toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'short', 
                day: 'numeric' 
              }) : ''}
            </span>
          </div>
          <div class="read-more">
            Read Article ‚Üí
          </div>
        </a>
      ))}
    </div>

    <!-- Empty State -->
    {posts.length === 0 && (
      <div class="empty-state">
        <div class="empty-icon">üìù</div>
        <h3>No Articles Yet</h3>
        <p>Blog posts will appear here once they're published. Check back soon!</p>
      </div>
    )}
  </div>
</Layout>

<style>
  .blogs-section {
    padding: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    min-height: 100vh;
  }

  /* Header Styles */
  .blog-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 20px;
    padding: 3rem 2.5rem;
    margin-bottom: 4rem;
    color: white;
    box-shadow: 0 20px 40px rgba(102, 126, 234, 0.3);
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .logo-section {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    flex: 1;
  }

  .logo {
    font-size: 4rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 1rem;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .blog-info {
    flex: 1;
  }

  .blog-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #fff, #e0e7ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .blog-description {
    font-size: 1.2rem;
    line-height: 1.6;
    opacity: 0.9;
    max-width: 600px;
    margin: 0;
  }

  .header-stats {
    display: flex;
    gap: 2rem;
    text-align: center;
  }

  .stat {
    display: flex;
    flex-direction: column;
  }

  .stat-number {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.9rem;
    opacity: 0.8;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  /* Blog Grid Styles */
 .blog-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  gap: 2.5rem;
  position: relative;
  --gradient: linear-gradient(120deg, #667eea 0%, #764ba2 40%, #a18cd1 80%, #fbc2eb 100%);
}

/* Smooth flowing gradient across all blog cards */
.blog-card {
  background: var(--gradient);
  background-size: 400% 400%;
  background-position: calc(var(--i, 0) * 100%) 0%;
  border: none;
  border-radius: 16px;
  padding: 2.5rem 2rem;
  text-decoration: none;
  color: white;
  transition: all 0.4s ease;
  display: block;
  position: relative;
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
}

/* Optional shimmer flow */
.blog-card:hover {
  background-position: 100% 0%;
  transform: translateY(-8px);
}

/* Smooth gradient per index */
.blog-card:nth-child(1) { --i: 0; }
.blog-card:nth-child(2) { --i: 0.25; }
.blog-card:nth-child(3) { --i: 0.5; }
.blog-card:nth-child(4) { --i: 0.75; }
.blog-card:nth-child(5) { --i: 1; }

.blog-card h3, 
.blog-card p, 
.blog-meta, 
.read-more {
  color: white;
}

  .blog-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .blog-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    border-color: #667eea;
  }

  .blog-card:hover::before {
    transform: scaleX(1);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1.5rem;
  }

  .post-icon {
    font-size: 3rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .card-badge {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 0.4rem 1rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .blog-card h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #2d3748;
    line-height: 1.4;
    font-weight: 600;
  }

  .blog-card p {
    color: #6c757d;
    line-height: 1.6;
    margin-bottom: 2rem;
    font-size: 1rem;
  }

  .blog-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #9ca3af;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e9ecef;
  }

  .read-time, .blog-date {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
  }

  .read-more {
    color: #667eea;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .blog-card:hover .read-more {
    transform: translateX(5px);
    color: #764ba2;
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: #6c757d;
  }

  .empty-icon {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    opacity: 0.5;
  }

  .empty-state h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #2d3748;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .blogs-section {
      padding: 1rem;
    }

    .blog-header {
      padding: 2rem 1.5rem;
      margin-bottom: 2rem;
    }

    .header-content {
      flex-direction: column;
      text-align: center;
      gap: 2rem;
    }

    .logo-section {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .logo {
      font-size: 3rem;
    }

    .blog-title {
      font-size: 2rem;
    }

    .blog-description {
      font-size: 1.1rem;
    }

    .header-stats {
      justify-content: center;
    }

    .blog-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .blog-card {
      padding: 2rem 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .blog-title {
      font-size: 1.8rem;
    }

    .blog-description {
      font-size: 1rem;
    }

    .header-stats {
      gap: 1.5rem;
    }

    .stat-number {
      font-size: 1.5rem;
    }

    .blog-meta {
      flex-direction: column;
      gap: 0.5rem;
      align-items: flex-start;
    }
  }
</style>