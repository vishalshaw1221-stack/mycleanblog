<style>
  /* Add the CSS directly here */
  .social-section {
    text-align: center;
    margin-bottom: 2rem;
  }

  .social-section h3 {
    color: white;
    margin-bottom: 1rem;
  }

  .social-media {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .social-media a {
    color: white;
    text-decoration: none;
    padding: 0.8rem 1.2rem;
    border: 1px solid rgba(59, 130, 246, 0.3);
    border-radius: 8px;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .social-media a:hover {
    background: rgba(59, 130, 246, 0.2);
    transform: translateY(-2px);
    border-color: rgba(59, 130, 246, 0.6);
  }

  .contact-section {
    text-align: center;
    color: white;
    margin-top: 2rem;
  }

  .contact-form {
    max-width: 500px;
    margin: 0 auto;
  }

  .contact-form input,
  .contact-form textarea {
    width: 100%;
    padding: 0.8rem;
    margin-bottom: 1rem;
    border: 1px solid #ddd;
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.1);
    color: white;
  }

  .contact-form button {
    background: #3b82f6;
    color: white;
    padding: 0.8rem 2rem;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .contact-form button:hover {
    background: #2563eb;
  }
</style>

<style>
  /* Basic styling to make sure links are visible */
  .social-media a {
    color: white !important;
    text-decoration: none !important;
    padding: 10px 15px;
    margin: 5px;
    background: rgba(59, 130, 246, 0.3);
    border-radius: 5px;
    display: inline-block;
    transition: all 0.3s ease;
  }

  .social-media a:hover {
    background: rgba(59, 130, 246, 0.6);
    transform: translateY(-2px);
  }

  .social-media i {
    margin-right: 8px;
  }
</style>