---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<Layout title="Home">
  <div class="blogs-section">
    <h1>RECENT BLOGS</h1>
    
    <div class="blog-grid">
      {posts.map((post) => (
        <a href={`/blog/${post.slug}`} class="blog-card">
          <div class="blog-icon">ðŸ“„</div>
          <h3>{post.data.title}</h3>
          <p>{post.data.description || 'Click to read this fascinating article...'}</p>
          <div class="blog-meta">
            <span class="read-time">
              {post.data.readTime || '5 min read'}
            </span>
            <span class="blog-date">
              {post.data.pubDate ? new Date(post.data.pubDate).toLocaleDateString() : ''}
            </span>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>

<style>
  .blogs-section {
    padding: 2rem;
    text-align: center;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .blog-card {
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(59, 130, 246, 0.3);
    border-radius: 12px;
    padding: 2rem;
    text-decoration: none;
    color: white;
    transition: all 0.3s ease;
    display: block;
  }

  .blog-card:hover {
    background: rgba(255, 255, 255, 0.12);
    border-color: var(--electron-blue);
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(59, 130, 246, 0.2);
  }

  .blog-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .blog-card h3 {
    font-size: 1.4rem;
    margin-bottom: 1rem;
    color: white;
  }

  .blog-card p {
    color: #cbd5e1;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .blog-meta {
    display: flex;
    justify-content: space-between;
    color: var(--neutron-gray);
    font-size: 0.9rem;
  }
</style>