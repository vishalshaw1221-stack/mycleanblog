        height: 100%;
        margin: 0;
        padding: 0;
      }

      body {
        display: flex;
        flex-direction: column;
        align-items: center;
        min-height: 100vh;
        background: linear-gradient(135deg, var(--space-blue) 0%, var(--quantum-purple) 100%);
        color: white;
        font-family: 'Arial', sans-serif;
      }
      /* Background Watermark with Content Area Protection */
