---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact">
  <section class="page-hero">
    <div class="container">
      <h1>Get In Touch</h1>
      <p>We'd love to hear from you</p>
    </div>
  </section>

  <section class="contact-content">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-info">
          <h2>Contact Information</h2>
          <div class="contact-item">
            <h3>üìß Email</h3>
            <p>
              <a href="mailto:vishalshaw9531@gmail.com" class="email-link">
                vishalshaw9531@gmail.com
              </a>
            </p>
          </div>
          <div class="contact-item">
            <h3>üåê Follow Us</h3>
            <div class="social-links">
              <a href="https://x.com/PhysicsP32590" target="_blank" rel="noopener noreferrer">
                <i class="fab fa-twitter"></i> Twitter / X
              </a>
              <a href="https://www.linkedin.com/me?trk=p_mwlite_feed-secondary_nav" target="_blank" rel="noopener noreferrer">
                <i class="fab fa-linkedin"></i> LinkedIn
              </a>
              <a href="https://github.com/vishashaw1221-stack" target="_blank" rel="noopener noreferrer">
                <i class="fab fa-github"></i> GitHub
              </a>
              <a href="https://m.youtube.com/channel/UCQeEKqqidI7I0etj-Io0CZA/videos" target="_blank" rel="noopener noreferrer">
                <i class="fab fa-youtube"></i> YouTube
              </a>
              <a href="https://www.instagram.com/physicsinphysics/" target="_blank" rel="noopener noreferrer">
                <i class="fab fa-instagram"></i> Instagram
              </a>
              <a href="https://www.facebook.com/profile.php?id=61583067824148" target="_blank" rel="noopener noreferrer">
                <i class="fab fa-facebook"></i> Facebook
              </a>
            </div>
          </div>
        </div>
        
        <form class="contact-form" action="https://formspree.io/f/xqagvnkp" method="POST">
          <h2>Send us a Message</h2>
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" required placeholder="Your full name">
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required placeholder="your.email@example.com">
          </div>
          <div class="form-group">
            <label for="subject">Subject</label>
            <input type="text" id="subject" name="subject" required placeholder="What is this regarding?">
          </div>
          <div class="form-group">
            <label for="message">Message</label>
            <textarea id="message" name="message" rows="5" required placeholder="Your message here..."></textarea>
          </div>
          <button type="submit" class="submit-btn">Send Message</button>
        </form>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Define your color variables to match your theme */
  :root {
    --primary: #3b82f6;
    --secondary: #4c1d95;
    --accent: #dc2626;
    --white: #ffffff;
    --text: #0f172a;
    --border-radius: 8px;
    --shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .page-hero {
    background: linear-gradient(135deg, var(--accent) 0%, var(--secondary) 100%);
    color: var(--white);
    padding: 120px 2rem 60px;
    text-align: center;
  }

  .page-hero h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .page-hero p {
    font-size: 1.2rem;
    opacity: 0.9;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .contact-content {
    padding: 80px 0;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 4rem;
    align-items: start;
  }

  .contact-info h2 {
    margin-bottom: 2rem;
    color: var(--primary);
    font-size: 1.8rem;
  }

  .contact-item {
    margin-bottom: 2rem;
  }

  .contact-item h3 {
    color: var(--secondary);
    margin-bottom: 0.5rem;
    font-size: 1.2rem;
  }

  .contact-item p {
    color: var(--lab-white, #f8fafc);
    font-size: 1.1rem;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .social-links a {
    color: var(--electron-blue, #3b82f6);
    text-decoration: none;
    transition: color 0.3s ease;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border: 1px solid var(--electron-blue, #3b82f6);
    border-radius: var(--border-radius);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(59, 130, 246, 0.1);
  }

  .social-links a:hover {
    color: var(--white);
    background: var(--electron-blue, #3b82f6);
    transform: translateY(-2px);
  }

  /* Email Link Styling */
  .email-link {
    color: var(--electron-blue, #3b82f6);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .email-link:hover {
    color: var(--accent);
    text-decoration: underline;
  }

  .contact-form {
    background: rgba(255, 255, 255, 0.05);
    padding: 2.5rem;
    border-radius: 15px;
    border: 1px solid var(--electron-blue, #3b82f6);
    box-shadow: 0 0 30px rgba(59, 130, 246, 0.2);
    backdrop-filter: blur(10px);
  }

  .contact-form h2 {
    margin-bottom: 2rem;
    color: var(--electron-blue, #3b82f6);
    font-size: 1.8rem;
    text-align: center;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: var(--lab-white, #f8fafc);
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 1rem;
    border: 1px solid rgba(59, 130, 246, 0.3);
    border-radius: var(--border-radius);
    font-size: 1rem;
    transition: all 0.3s ease;
    background: rgba(15, 23, 42, 0.8);
    color: var(--lab-white, #f8fafc);
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--electron-blue, #3b82f6);
    box-shadow: 0 0 10px rgba(59, 130, 246, 0.3);
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: rgba(255, 255, 255, 0.6);
    opacity: 1;
  }

  .submit-btn {
    background: var(--electron-blue, #3b82f6);
    color: var(--white);
    padding: 1rem 2rem;
    border: none;
    border-radius: var(--border-radius);
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
    margin-top: 1rem;
  }

  .submit-btn:hover {
    background: var(--accent);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(220, 38, 38, 0.4);
  }

  /* üî• MOBILE RESPONSIVE STYLES */
  @media (max-width: 768px) {
    .page-hero {
      padding: 80px 1.5rem 40px;
    }

    .page-hero h1 {
      font-size: 2rem;
      margin-bottom: 0.8rem;
    }

    .page-hero p {
      font-size: 1.1rem;
    }

    .container {
      padding: 0 1.5rem;
    }

    .contact-content {
      padding: 60px 0;
    }

    .contact-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .contact-info h2 {
      font-size: 1.5rem;
      margin-bottom: 1.5rem;
      text-align: center;
    }

    .contact-item h3 {
      font-size: 1.1rem;
    }

    .contact-item p {
      font-size: 1rem;
    }

    .social-links {
      justify-content: center;
      flex-wrap: wrap;
    }

    .social-links a {
      padding: 0.6rem 1rem;
      font-size: 0.9rem;
      justify-content: center;
    }

    .contact-form {
      padding: 2rem 1.5rem;
      border-radius: 12px;
    }

    .contact-form h2 {
      font-size: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .form-group {
      margin-bottom: 1.2rem;
    }

    .form-group input,
    .form-group textarea {
      padding: 0.8rem;
      font-size: 1rem;
    }

    .submit-btn {
      padding: 0.9rem 1.5rem;
      font-size: 1rem;
    }
  }

  /* Extra small phones */
  @media (max-width: 480px) {
    .page-hero {
      padding: 60px 1rem 30px;
    }

    .page-hero h1 {
      font-size: 1.7rem;
    }

    .page-hero p {
      font-size: 1rem;
    }

    .container {
      padding: 0 1rem;
    }

    .contact-content {
      padding: 40px 0;
    }

    .contact-form {
      padding: 1.5rem 1rem;
      border-radius: 10px;
    }

    .contact-info h2 {
      font-size: 1.3rem;
    }

    .contact-form h2 {
      font-size: 1.3rem;
    }

    .social-links {
      flex-direction: column;
      align-items: center;
    }

    .social-links a {
      width: 100%;
      text-align: center;
      margin-bottom: 0.5rem;
      justify-content: center;
    }

    .form-group input,
    .form-group textarea {
      padding: 0.7rem;
      font-size: 0.95rem;
    }

    .submit-btn {
      padding: 0.8rem 1.2rem;
    }
  }

  /* Large desktop enhancement */
  @media (min-width: 1200px) {
    .page-hero h1 {
      font-size: 3rem;
    }

    .page-hero p {
      font-size: 1.3rem;
    }

    .contact-grid {
      gap: 5rem;
    }
  }
</style>