---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<Layout title="Home">
  <div class="blogs-section">
    <div class="hero-section">
      <h1 class="main-title">Recent Blogs</h1>
      <p class="subtitle">Discover the latest thoughts and insights</p>
    </div>
    
    <div class="blog-grid">
      {posts.map((post) => (
        <a href={`/blog/${post.slug}`} class="blog-card">
          <div class="card-header">
            <div class="blog-icon">üìÑ</div>
            <div class="card-badge">New</div>
          </div>
          <h3>{post.data.title}</h3>
          <p>{post.data.description || 'Click to read this fascinating article...'}</p>
          <div class="blog-meta">
            <span class="read-time">
              ‚è±Ô∏è {post.data.readTime || '5 min read'}
            </span>
            <span class="blog-date">
              üìÖ {post.data.pubDate ? new Date(post.data.pubDate).toLocaleDateString() : ''}
            </span>
          </div>
          <div class="read-more">
            Read More ‚Üí
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>

<style>
  .blogs-section {
    padding: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .hero-section {
    text-align: center;
    margin-bottom: 4rem;
    padding: 3rem 0;
  }

  .main-title {
    font-size: 3.5rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .subtitle {
    font-size: 1.2rem;
    color: #6c757d;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
    gap: 2.5rem;
    margin-top: 2rem;
  }

  .blog-card {
    background: linear-gradient(145deg, #ffffff, #f8f9fa);
    border: 1px solid #e9ecef;
    border-radius: 16px;
    padding: 2.5rem 2rem;
    text-decoration: none;
    color: #2d3748;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: block;
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .blog-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .blog-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    border-color: #667eea;
  }

  .blog-card:hover::before {
    transform: scaleX(1);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1.5rem;
  }

  .blog-icon {
    font-size: 3rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .card-badge {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 0.4rem 1rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .blog-card h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #2d3748;
    line-height: 1.4;
    font-weight: 600;
  }

  .blog-card p {
    color: #6c757d;
    line-height: 1.6;
    margin-bottom: 2rem;
    font-size: 1rem;
  }

  .blog-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #9ca3af;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e9ecef;
  }

  .read-time, .blog-date {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
  }

  .read-more {
    color: #667eea;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .blog-card:hover .read-more {
    transform: translateX(5px);
    color: #764ba2;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .blogs-section {
      padding: 1rem;
    }

    .main-title {
      font-size: 2.5rem;
    }

    .blog-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .blog-card {
      padding: 2rem 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .main-title {
      font-size: 2rem;
    }

    .hero-section {
      padding: 2rem 0;
      margin-bottom: 2rem;
    }

    .blog-meta {
      flex-direction: column;
      gap: 0.5rem;
      align-items: flex-start;
    }
  }
</style>