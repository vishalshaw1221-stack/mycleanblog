</Layout>

<style>
  /* Define your color variables to match your theme */
  :root {
    --primary: #3b82f6;
    --secondary: #4c1d95;
    --accent: #dc2626;
    --white: #ffffff;
    --text: #0f172a;
    --text-light: #64748b;
    --border-radius: 12px;
    --shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .page-hero {
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: var(--white);
    padding: 120px 2rem 60px;
    text-align: center;
  }

  .page-hero h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .page-hero p {
    font-size: 1.2rem;
    opacity: 0.9;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .blog-content {
    padding: 80px 0;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .blog-card {
    background: rgba(255, 255, 255, 0.05);
    padding: 2.5rem 2rem;
    border-radius: var(--border-radius);
    border: 1px solid rgba(59, 130, 246, 0.3);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .blog-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 30px rgba(59, 130, 246, 0.3);
    border-color: rgba(59, 130, 246, 0.6);
  }

  .blog-category {
    display: inline-block;
    padding: 0.4rem 1rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    margin-bottom: 1.2rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .blog-category.science {
    background: rgba(52, 152, 219, 0.2);
    color: #60a5fa;
    border: 1px solid rgba(52, 152, 219, 0.3);
  }

  .blog-category.tech {
    background: rgba(220, 38, 38, 0.2);
    color: #f87171;
    border: 1px solid rgba(220, 38, 38, 0.3);
  }

  .blog-category.inspiration {
    background: rgba(34, 197, 94, 0.2);
    color: #4ade80;
    border: 1px solid rgba(34, 197, 94, 0.3);
  }

  .blog-card h3 {
    margin-bottom: 1.2rem;
    color: var(--lab-white, #f8fafc);
    font-size: 1.4rem;
    line-height: 1.4;
    font-weight: 600;
  }

  .blog-card p {
    margin-bottom: 1.8rem;
    color: var(--lab-white, #e2e8f0);
    line-height: 1.6;
    opacity: 0.9;
  }

  .read-more {
    color: var(--electron-blue, #3b82f6);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.2rem;
    border: 1px solid var(--electron-blue, #3b82f6);
    border-radius: var(--border-radius);
    background: rgba(59, 130, 246, 0.1);
  }

  .read-more:hover {
    color: var(--white);
    background: var(--electron-blue, #3b82f6);
    transform: translateX(5px);
  }

  /* ðŸ”¥ MOBILE RESPONSIVE STYLES */
  @media (max-width: 768px) {
    .page-hero {
      padding: 80px 1.5rem 40px;
    }

    .page-hero h1 {
      font-size: 2rem;
      margin-bottom: 0.8rem;
    }

    .page-hero p {
      font-size: 1.1rem;
    }

    .container {
      padding: 0 1.5rem;
    }

    .blog-content {
      padding: 60px 0;
    }

    .blog-grid {
      grid-template-columns: 1fr; /* Single column on mobile */
      gap: 1.5rem;
    }

    .blog-card {
      padding: 2rem 1.5rem;
      border-radius: 10px;
      margin: 0 0.5rem;
    }

    .blog-card h3 {
      font-size: 1.2rem; /* Smaller headings */
      margin-bottom: 1rem;
    }

    .blog-card p {
      font-size: 0.95rem; /* Smaller text */
      margin-bottom: 1.5rem;
      line-height: 1.5;
    }

    .blog-category {
      padding: 0.3rem 0.8rem;
      font-size: 0.75rem;
      margin-bottom: 1rem;
    }

    .read-more {
      padding: 0.5rem 1rem;
      font-size: 0.9rem;
      width: 100%;
      text-align: center;
      justify-content: center;
    }
  }

  /* Extra small phones */
  @media (max-width: 480px) {
    .page-hero {
      padding: 60px 1rem 30px;
    }

    .page-hero h1 {
      font-size: 1.7rem;
    }

    .page-hero p {
      font-size: 1rem;
    }

    .container {
      padding: 0 1rem;
    }

    .blog-content {
      padding: 40px 0;
    }

    .blog-card {
      padding: 1.5rem 1rem;
      border-radius: 8px;
      margin: 0 0.2rem;
    }

    .blog-card h3 {
      font-size: 1.1rem;
    }

    .blog-card p {
      font-size: 0.9rem;
    }

    .blog-category {
      font-size: 0.7rem;
      padding: 0.25rem 0.7rem;
    }

    .read-more {
      padding: 0.6rem;
      font-size: 0.85rem;
    }
  }

  /* Medium screens - 2 columns */
  @media (min-width: 769px) and (max-width: 1024px) {
    .blog-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
    
    .blog-card {
      padding: 2rem 1.5rem;
    }
  }

  /* Large desktop enhancement */
  @media (min-width: 1200px) {
    .page-hero h1 {
      font-size: 3rem;
    }

    .page-hero p {
      font-size: 1.3rem;
    }

    .blog-grid {
      grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
      gap: 2.5rem;
    }

    .blog-card {
      padding: 3rem 2.5rem;
    }

    .blog-card h3 {
      font-size: 1.5rem;
    }
  }
</style>