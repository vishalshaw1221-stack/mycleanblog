---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<Layout title="Home | My Blog">
  <header style="text-align:center;margin-bottom:3rem;">
    <h1>ü™ê My Blog</h1>
    <p class="subtitle">Explore my latest posts and experiments.</p>
  </header>

  <main>
    <ul style="list-style:none;display:grid;gap:1.5rem;padding:0;">
      {posts.map((post) => (
        <li style="background:#1e293b;border-radius:1rem;padding:1.5rem;">
          <a href={`/blog/${post.slug}/`} style="color:#38bdf8;text-decoration:none;font-size:1.2rem;">
            {post.data.title || post.slug}
          </a>
          <span style="display:block;color:#94a3b8;font-size:0.9rem;margin-top:0.3rem;">
            {post.data.pubDate ? new Date(post.data.pubDate).toDateString() : ""}
          </span>
        </li>
      ))}
    </ul>
  </main>
</Layout>