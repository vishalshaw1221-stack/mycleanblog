  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(15, 23, 42, 0.3); /* Semi-transparent overlay */
  backdrop-filter: blur(2px); /* Very subtle blur */
  border-radius: 15px;
  z-index: -1;
  pointer-events: none;
}

/* Ensure main content stays readable */
main {
  position: relative;
  z-index: 1;
}

      header, footer {
  width: 80%;
  max-width: 1100px;
  border-radius: 15px;
  box-sizing: border-box;
      }

main {
  width: 85%; /* Slightly wider than header/footer */
  max-width: 1200px; /* Wider max width */
  border-radius: 15px;
  box-sizing: border-box;
  margin-left: auto; /* Push to right */
  margin-right: 5%; /* Add some right margin */
     }

      /* === HEADER === */
      header {
        background: rgba(15, 23, 42, 0.9);
        border: 1px solid var(--electron-blue);
        box-shadow: 0 0 25px rgba(59, 130, 246, 0.25);
        padding: 1rem;
        margin-top: 1.5rem;
        margin-bottom: 1.5rem;
      }

      /* === MAIN === */
      main {
        flex-grow: 1;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(59, 130, 246, 0.3);
        box-shadow: 0 0 40px rgba(59, 130, 246, 0.25);
        padding: 3rem 2rem;
        margin-bottom: 2rem;
      }

      /* === FOOTER === */
      /* === FOOTER === */
  footer {
  background: rgba(15, 23, 42, 0.9);
  border: 1px solid var(--electron-blue);
  box-shadow: 0 0 25px rgba(59, 130, 246, 0.25);
  padding: 3rem 2rem 2rem; /* Increased padding */
  text-align: center;
  position: relative;
  min-height: 200px; /* Added minimum height */
  display: flex;
  flex-direction: column;
  justify-content: center; /* Center content vertically */
  }

      footer::before {
        content: "";
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80%;
        height: 2px;
        background: linear-gradient(90deg, var(--electron-blue), var(--atom-red), var(--quantum-purple));
        box-shadow: 0 0 15px var(--electron-blue);
        border-radius: 5px;
      }

      .social-icons {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        margin: 1rem 0;
      }

      .social-icons a {
        color: white;
        font-size: 4rem;
        transition: all 0.3s ease;
        text-shadow: 0 0 10px var(--electron-blue);
      }

      .social-icons a:hover {
        color: var(--atom-red);
        transform: scale(1.2);
        text-shadow: 0 0 15px var(--atom-red);
      }

      footer p {
  font-size: 1.1rem; /* Increased from 0.9rem */
  color: #cbd5e1;
  opacity: 0.8;
  margin-top: 1rem;
    }

      @media (max-width: 768px) {
        header, main, footer {
          width: 90%;
          padding: 1rem;
        }
      }
    </style>
  </head>

  <body>
    <header>
      <Header />
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <div class="social-icons">
        <a href="#"><i class="fab fa-facebook-f"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
        <a href="#"><i class="fab fa-instagram"></i></a>
        <a href="#"><i class="fab fa-github"></i></a>
      </div>
      <p>© 2025 SciencePedia — Exploring the Universe of Knowledge</p>
    </footer>
    <script>
  // Smart Search that searches blog titles and content
  document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.querySelector('.search-input');
    const searchButton = document.querySelector('.search-button');
    
    // This will be populated with your actual blog data
    let blogData = [];
    
    // Fetch your blog data (you'll need to implement this)
    async function loadBlogData() {
  try {
    // If using Content Collections:
    const posts = await getCollection("blog");
    blogData = posts.map(post => ({
      id: post.slug,
      title: post.data.title,
      description: post.data.description,
      content: post.body, // The actual blog content
      tags: post.data.tags || []
    }));
  } catch (error) {
    // Fallback to sample data
    blogData = [
      {
        id: 'quantum-physics',
        title: 'Understanding Quantum Physics',
        description: 'Quantum physics is very interesting subject...',
        content: 'Your blog content here...',
        tags: ['physics', 'science']
      }
    ];
  }
}
        {
          id: 'ai-future', 
          title: 'The Future of Artificial Intelligence',
          description: 'Exploring AI advancements and machine learning',
          content: 'Artificial intelligence is transforming how we live and work...',
          tags: ['ai', 'technology', 'machine-learning']
        }
        // Add more blogs as you create them
      ];
    }
    
    let suggestionsDiv = null;
    
    function searchBlogs(searchTerm) {
      const term = searchTerm.toLowerCase().trim();
      if (!term) return [];
      
      return blogData.filter(blog => {
        // Search in title
        if (blog.title.toLowerCase().includes(term)) return true;
        
        // Search in description
        if (blog.description.toLowerCase().includes(term)) return true;
        
        // Search in content (first 200 chars)
        if (blog.content.toLowerCase().includes(term)) return true;
        
        // Search in tags
        if (blog.tags.some(tag => tag.toLowerCase().includes(term))) return true;
        
        return false;
      });
    }
    
    function showSuggestions() {
      const searchTerm = searchInput.value;
      
      // Remove existing suggestions
      if (suggestionsDiv) {
        suggestionsDiv.remove();
      }
      
      if (!searchTerm) {
        return;
      }
      
      const results = searchBlogs(searchTerm);
      
      if (results.length > 0) {
        // Create suggestions dropdown
        suggestionsDiv = document.createElement('div');
        suggestionsDiv.className = 'search-suggestions';
        
        suggestionsDiv.innerHTML = results.map(blog => `
          <div class="suggestion-item" data-blog-id="${blog.id}">
            <div class="suggestion-title">${blog.title}</div>
            <div class="suggestion-desc">${blog.description}</div>
          </div>
        `).join('');
        
        // Position below search bar
        const searchContainer = searchInput.closest('.search-container');
        searchContainer.appendChild(suggestionsDiv);
        
        // Add click handlers to suggestions
        suggestionsDiv.querySelectorAll('.suggestion-item').forEach(item => {
          item.addEventListener('click', function() {
            const blogId = this.dataset.blogId;
            window.location.href = `/blog/${blogId}`;
          });
        });
      } else {
        // No results found
        suggestionsDiv = document.createElement('div');
        suggestionsDiv.className = 'search-suggestions';
        suggestionsDiv.innerHTML = '<div class="no-results">No blogs found matching your search</div>';
        
        const searchContainer = searchInput.closest('.search-container');
        searchContainer.appendChild(suggestionsDiv);
      }
    }
    
    function performSearch() {
      const searchTerm = searchInput.value.trim();
      if (searchTerm) {
        const results = searchBlogs(searchTerm);
        if (results.length > 0) {
          // Redirect to first result or show search results page
          window.location.href = `/blog/${results[0].id}`;
        } else {
          alert(`No blogs found for "${searchTerm}"`);
        }
        hideSuggestions();
      }
    }
    
    function hideSuggestions() {
      if (suggestionsDiv) {
        suggestionsDiv.remove();
        suggestionsDiv = null;
      }
    }
    
    // Initialize
    loadBlogData();
    
    // Event listeners
    searchInput.addEventListener('input', showSuggestions);
    searchInput.addEventListener('focus', showSuggestions);
    
    searchButton.addEventListener('click', performSearch);
    
    searchInput.addEventListener('keypress', function(e) {
      if (e.key === 'Enter') {
        performSearch();
      }
    });
    
    // Hide suggestions when clicking outside
    document.addEventListener('click', function(e) {
      if (!e.target.closest('.search-container')) {
        hideSuggestions();
      }
    });
  });
</script>

<style>
  /* Search suggestions styling */
  .search-suggestions {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: rgba(15, 23, 42, 0.98);
    border: 1px solid var(--electron-blue);
    border-radius: 8px;
    margin-top: 5px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    z-index: 1000;
    max-height: 300px;
    overflow-y: auto;
  }
  
  .suggestion-item {
    padding: 12px 15px;
    color: white;
    cursor: pointer;
    border-bottom: 1px solid rgba(59, 130, 246, 0.2);
    transition: background 0.2s;
  }
  
  .suggestion-item:hover {
    background: rgba(59, 130, 246, 0.3);
  }
  
  .suggestion-item:last-child {
    border-bottom: none;
  }
  
  .suggestion-title {
    font-weight: bold;
    font-size: 1rem;
    margin-bottom: 4px;
  }
  
  .suggestion-desc {
    font-size: 0.8rem;
    color: #cbd5e1;
    opacity: 0.8;
  }
  
  .no-results {
    padding: 12px 15px;
    color: var(--neutron-gray);
    text-align: center;
  }
  
  .search-container {
    position: relative;
  }
</style>
  </body>
</html>