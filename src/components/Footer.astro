    <a href="https://www.linkedin.com/me?trk=p_mwlite_feed-secondary_nav" target="_blank" class="icon-link" aria-label="LinkedIn">
      <i class="fab fa-linkedin"></i>
    </a>
    <a href="https://m.youtube.com/channel/UCQeEKqqidI7I0etj-Io0CZA/videos" target="_blank" class="icon-link" aria-label="YouTube">
      <i class="fab fa-youtube"></i>
    </a>
  </div>

  <style>
    footer {
      text-align: center;
      color: white;
      font-family: 'Poppins', sans-serif;
      margin-top: 2.2rem;
      padding: 1.4rem 0;
    }

    .social-media {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 25px;
    }

    .icon-link {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 75px;
      height: 75px;
      font-size: 38px; /* ‚¨ÜÔ∏è Increased icon size */
      color: white;
      border-radius: 16px;
      text-decoration: none;
      background: rgba(255, 255, 255, 0.04);
      border: 1px solid rgba(59, 130, 246, 0.3);
      box-shadow: 0 0 15px rgba(59, 130, 246, 0.25);
      transition: all 0.3s ease;
      position: relative;
    }

    .icon-link::before {
      content: "";
      position: absolute;
      inset: 0;
      border-radius: 16px;
      padding: 1px;
      background: linear-gradient(135deg, #3b82f6, #9333ea, #ef4444);
      mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
      -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
      mask-composite: exclude;
      -webkit-mask-composite: destination-out;
      pointer-events: none;
    }

    .icon-link:hover {
      transform: scale(1.12);
      box-shadow: 0 0 25px rgba(147, 51, 234, 0.6);
    }

    .icon-link:hover i {
      color: #60a5fa;
    }

    /* üî• MOBILE RESPONSIVE STYLES */
    /* These only activate on phones - desktop stays perfect! */
    @media (max-width: 768px) {
      footer {
        margin-top: 1.5rem;
        padding: 1rem 0;
      }

      .social-media {
        gap: 15px; /* Tighter spacing on mobile */
        padding: 0 10px; /* Add some padding on sides */
      }

      .icon-link {
        width: 60px;  /* Smaller on mobile */
        height: 60px; /* Smaller on mobile */
        font-size: 28px; /* Smaller icons on mobile */
        border-radius: 12px;
      }

      /* Better touch targets for mobile */
      .icon-link:active {
        transform: scale(0.95);
        background: rgba(255, 255, 255, 0.08);
      }
    }

    /* Extra small phones */
    @media (max-width: 480px) {
      .social-media {
        gap: 12px;
      }

      .icon-link {
        width: 55px;
        height: 55px;
        font-size: 24px;
        border-radius: 10px;
      }
    }

    /* Large desktop screens */
    @media (min-width: 1200px) {
      .social-media {
        gap: 30px; /* More space on huge screens */
      }
    }
  </style>
</footer>